{
    "manifest_version": 3,
    "name": "Voice Input Translator",
    "version": "1.1",
    "description": "Record voice input and translate to English text using GroqCloud Whisper API",
    "permissions": ["storage"],
    "host_permissions": [
        "https://api.groq.com/",
        "https://api.openai.com/"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png"

        }
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    }
}